<% if flash[:notice] %>
 <div class = "flash">
   <%= flash[:notice] %>
 </div>
<% end %>
<div class = "index-header"><h1>Books</h1></div>

<table>
 <tr>
  <th>Title</th>
  <th>Body</th>
  <th colospan="3"></th>
 </tr>

 <tbody>
<% @books.each do |book| %>
  <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%= link_to "Show", book_path(book.id) %></td>
   <td><%= link_to "Edit", edit_book_path(book.id) %></td>
   <td>
    <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
   </td>
  </tr>
  <% end %>
 </tbody>
</table>

