<% if flash[:notice] %>
 <div class = "flash">
   <%= flash[:notice] %>
 </div>
<% end %>

<div class = "show-main">
 <div class = "show-main-title">
  <strong>Title:</strong>
  <p><%= @book.title %></p>
 </div>

 <div class = "show-main-body">
  <strong>Body:</strong>
  <p><%= @book.body %></p>
 </div>
</div>

<div class = "show-link">
 <%= link_to "Edit", edit_book_path(@book.id) %>
 |
 <%= link_to "Back", '/books' %>
</div>
